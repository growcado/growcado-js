{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    
    // Enable JavaScript and Declaration Output
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Module Configuration for SDK
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2022",
    
    // Library-specific Settings
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "types": ["node"],
    
    // Path Resolution
    "paths": {
      "@growcado/sdk": ["./src/index.ts"],
      "@growcado/sdk/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [],
  "exclude": [
    "dist",
    "node_modules",
    "vite.config.ts",
    "vite.config.mts", 
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
