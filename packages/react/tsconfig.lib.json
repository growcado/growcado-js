{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    
    // Enable JavaScript and Declaration Output  
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // React-specific Module Configuration
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "jsx": "react-jsx",
    "allowJs": false,
    
    // Library-specific Settings
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "preserveConstEnums": true,
    
    // Types for React (CSS modules removed)
    "types": [
      "node"
    ],
    
    // Path Resolution for SDK imports
    "paths": {
      "@growcado/sdk": ["../sdk/src/index.ts"],
      "@growcado/sdk/*": ["../sdk/src/*"],
      "@growcado/react": ["./src/index.ts"],
      "@growcado/react/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.js", 
    "src/**/*.jsx", 
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../sdk/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
